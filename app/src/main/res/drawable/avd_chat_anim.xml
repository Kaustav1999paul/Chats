<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="32dp"
            android:height="32dp"
            android:viewportWidth="32"
            android:viewportHeight="32">
            <group android:name="animate">
                <path
                    android:name="main"
                    android:pathData="M 25 8.2 C 24.7 4.2 21.4 1 17.3 1 L 8.8 1 C 4.5 1 1 4.5 1 8.7 L 1 23 C 1 23.4 1.2 23.7 1.6 23.9 C 1.7 24 1.9 24 2 24 C 2.2 24 2.5 23.9 2.7 23.8 C 4 22.7 5.5 21.8 7 21.1 L 7 30 C 7 30.4 7.2 30.7 7.6 30.9 C 7.7 31 7.9 31 8 31 C 8.2 31 8.5 30.9 8.7 30.8 C 11.6 28.2 15.4 26.8 19.3 26.8 L 23.3 26.8 C 27.6 26.8 31.1 23.3 31.1 19.1 L 31.1 15.7 C 31 12.1 28.4 9 25 8.2 Z M 29 19.1 C 29 22.3 26.4 24.8 23.2 24.8 L 19.2 24.8 C 15.6 24.8 12 25.9 9 28 L 9 20.4 C 10.4 20 11.8 19.8 13.3 19.8 L 17.3 19.8 C 21.6 19.8 25.1 16.3 25.1 12.1 L 25.1 10.3 C 27.4 11 29.1 13.2 29.1 15.7 L 29.1 19.1 Z"
                    android:fillColor="#000"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="animate">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="400"
                    android:valueFrom="1"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="400"
                    android:valueFrom="1"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="pivotX"
                    android:duration="800"
                    android:valueFrom="12"
                    android:valueTo="17"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/bounce_interpolator"/>
                <objectAnimator
                    android:propertyName="pivotY"
                    android:duration="800"
                    android:valueFrom="8.5"
                    android:valueTo="8.5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/bounce_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="400"
                    android:duration="400"
                    android:valueFrom="0.5"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/bounce_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="400"
                    android:duration="400"
                    android:valueFrom="0.5"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/bounce_interpolator"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="main">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillColor"
                android:startOffset="700"
                android:duration="100"
                android:valueFrom="#a7a7a7"
                android:valueTo="#00ff96"
                android:valueType="colorType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
