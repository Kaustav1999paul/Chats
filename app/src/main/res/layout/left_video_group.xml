<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoGMember"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:src="@color/hintcolor"/>

        <TextView
            android:id="@+id/show_videoL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_round_videocam_24"
            android:drawablePadding="10dp"
            android:textColor="@color/font1color"
            android:paddingRight="10dp"
            android:background="@drawable/background_left"
            android:text="Video"/>
    </LinearLayout>


    <ImageView
        android:layout_marginLeft="30dp"
        android:id="@+id/isLiked"
        android:layout_width="20dp"
        android:visibility="gone"
        android:layout_height="20dp"
        android:background="@drawable/ic_liked" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/text_seenL"
        android:layout_width="6dp"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:src="#FFC107"
        android:layout_height="6dp"/>
</RelativeLayout>