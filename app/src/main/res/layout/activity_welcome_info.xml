<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".welcomeInfoActivity">

    <TextView
        android:id="@+id/titleWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Chats"
        android:textColor="@color/font1color"
        android:textSize="35dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/titleWelcome"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:background="@drawable/storage"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Cloud storage system saves mobile storage."
            android:textColor="@color/font1color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/storage"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/security" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="High level of security to protect your privacy."
            android:textColor="@color/font1color"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/finger"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/theme" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Switch to dark mode whenever it is necessary for you."
            android:textColor="@color/font1color"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:background="@drawable/gest"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Smart Gesture based navigation."
            android:textColor="@color/font1color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/continuee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_background"
        android:padding="15dp"
        android:text="Continue"
        android:elevation="10dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />
</RelativeLayout>