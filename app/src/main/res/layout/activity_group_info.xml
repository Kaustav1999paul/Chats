<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".GroupInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:elevation="0dp"
        app:elevation="0dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="0dp"
            android:background="@color/background"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:background="@drawable/ic_round_arrow_back_ios_24"
                android:layout_marginRight="10dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/groupAddPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/online"
                android:textSize="13dp"
                android:gravity="end"
                android:transitionName="usernameMain"
                android:background="@color/background"
                android:layout_marginRight="20dp"
                android:text="Add People"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_below="@id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="9dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/mainn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp">
                    <ImageView
                        android:id="@+id/gAvatar"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/gName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/font1color"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:transitionName="share_name" />

                    <TextView
                        android:id="@+id/gDate"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/hintcolor"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Members: "
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/hintcolor"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/countt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/hintcolor"
                android:textStyle="bold"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peopleGroupList"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>



</RelativeLayout>