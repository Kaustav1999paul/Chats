<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".NoInternetActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/no_inte"
        android:layout_height="200dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:text="Devide is not connected to internet"/>

    <Button
        android:id="@+id/wifiSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Wifi settings"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/callSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open cellular data settings"
        android:textAllCaps="false"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"/>
</LinearLayout>