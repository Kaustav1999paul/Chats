<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@color/font1color" />

            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_liked"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="340"
                android:textSize="10dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/commentButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_message"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personNamePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font1color"
                android:textSize="15dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Name"/>
            <TextView
                android:id="@+id/personTimePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hintcolor"
                android:textSize="11dp"
                android:layout_marginHorizontal="16dp"
                android:text="11:21 PM"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/imagePost"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font1color"
                android:layout_marginHorizontal="20dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>