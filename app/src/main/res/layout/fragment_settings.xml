<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/settingsB"
    android:background="@color/set"
    tools:context=".Fragments.SettingsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tabanim_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tabanim_toolbar"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            app:title="Settings"
            android:background="@color/background"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@color/font1color"
            app:titleMarginTop="30dp"
            android:elevation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/statusList"
                    android:layout_width="match_parent"
                    android:background="@color/background"
                    android:elevation="2dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/acc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginVertical="15dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="20dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/avatar"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:layout_height="match_parent"
                                android:transitionName="share_image" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/holderName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/font1color"
                                android:textSize="20dp"
                                android:layout_marginBottom="4dp"
                                android:textStyle="bold"
                                android:transitionName="share_name" />

                            <TextView
                                android:id="@+id/holderEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="#00E47A"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/bioAcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="10dp"
                            android:background="@color/searchbar"
                            android:paddingVertical="12dp"
                            android:textColor="@color/font1color" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="13dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/background"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/wish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wish"
                            android:textSize="20dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="end|center"
                            android:textColor="@color/font1color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/weatherIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"/>

                            <TextView
                                android:id="@+id/temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:text="30"
                                android:textSize="30dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:textColor="@color/font1color"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="O"
                                android:textSize="5dp"
                                android:textColor="@color/font1color"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:text="C"
                                android:textSize="30dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:textColor="@color/font1color"/>

                            <TextView
                                android:id="@+id/mes"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="end|center"
                                android:textColor="@color/hintcolor"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="13dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/scroll"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="18dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/notifications"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="10dp"
                                android:layout_marginTop="2dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_gravity="center"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/offline"
                                    app:cardCornerRadius="5dp"
                                    android:layout_height="30dp">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/ic_notifications"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/font1color"
                                    android:text="Notifications"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/settings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="10dp"
                                android:layout_marginTop="2dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_gravity="center"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/online"
                                    app:cardCornerRadius="5dp"
                                    android:layout_height="30dp">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/ic_acset"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/font1color"
                                    android:text="Account Settings"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="10dp"
                                android:layout_marginTop="2dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_gravity="center"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#0090FF"
                                    app:cardCornerRadius="5dp"
                                    android:layout_height="30dp">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/ic_cont_us"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/font1color"
                                    android:text="Contact Us/ Help"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="10dp"
                                android:layout_marginTop="2dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_gravity="center"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#673AB7"
                                    app:cardCornerRadius="5dp"
                                    android:layout_height="30dp">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/ic_help"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/font1color"
                                    android:text="About Us"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="15dp"
                            android:outlineSpotShadowColor="#FF1313"
                            android:elevation="5dp"
                            android:layout_marginBottom="35dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="45dp"
                            android:background="@drawable/more_menus">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_logout"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/font1color"
                                android:text="Logout"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:fabCustomSize="38dp"
        android:layout_marginHorizontal="26dp"
        android:visibility="visible"
        app:elevation="20dp"
        android:outlineSpotShadowColor="#00E47A"
        android:outlineAmbientShadowColor="#00E47A"
        app:layout_anchor="@id/tabanim_toolbar"
        app:layout_anchorGravity="bottom|end"
        app:backgroundTint="#00E47A"
        android:elevation="20dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>