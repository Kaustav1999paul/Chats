<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FriendsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tabanim_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tabanim_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:titleTextColor="@color/font1color"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="25dp"
                        android:background="@drawable/ic_round_arrow_back_ios_24"
                        android:layout_marginRight="10dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/userNameChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font1color"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:transitionName="usernameMain"
                        android:background="@color/background"
                        android:layout_marginRight="40dp"
                        android:text="Friends"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/contactList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/background"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    android:layout_marginVertical="9dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/background"
                        android:layout_marginHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="2dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_gravity="center"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/online"
                            app:cardCornerRadius="5dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_round_contacts_24"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/font1color"
                            android:text="People in your Contacts"/>

                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="25dp"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_height="25dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendsList"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/messageNo"
        android:visibility="gone"
        android:textColor="@color/online"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Friends yet"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout >