<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bottomNav"
    android:layout_height="match_parent"
    tools:context=".EditAccountActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tabanim_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tabanim_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:titleTextColor="@color/font1color"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:background="@drawable/ic_round_arrow_back_ios_24"
                android:layout_marginRight="10dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font1color"
                android:textSize="16dp"
                android:textStyle="bold"
                android:transitionName="usernameMain"
                android:background="@color/background"
                android:layout_marginRight="40dp"
                android:text="Edit Account"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/actual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="500dp">
        <ImageView
            android:id="@+id/avatar"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/nameAccountT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@color/bottomNav"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:paddingHorizontal="20dp"
            android:inputType="textAutoCorrect"
            android:textColor="@color/font1color"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="15dp"/>

    <EditText
        android:id="@+id/bioAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:textSize="12dp"
        android:background="@color/bottomNav"
        android:gravity="center"
        android:drawablePadding="15dp"
        android:paddingHorizontal="20dp"
        android:textColor="@color/font1color"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="15dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/updateAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>